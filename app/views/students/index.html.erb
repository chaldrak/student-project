<%= render "partials/header" %>
<div class="container">
    <div class="row mt-4">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <h2 class="mb-4">LISTE STUDENTS</h2>
            <table class="table table-hover table-striped">
                <thead>
                  <tr>
                    <th scope="col">NÂ°</th>
                    <th scope="col">NOM</th>
                    <th scope="col">PRENOM</th>
                    <th scope="col">MATRICULE</th>
                    <th scope="col">SEXE</th>
                    <th scope="col">DATE DE NAISSANCE</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                  </tr>
                </thead>
                <tbody>
                  <% @students.each_with_index do |student, index| %>
                  <tr>
                    <th scope="row"><%= index + 1 %></th>
                    <td><%= student.last_name %></td>
                    <td><%= student.first_name %></td>
                    <td><%= student.matricule %></td>
                    <td><%= student.sexe %></td>
                    <td><%= student.birth_date %></td>
                    <td>
                        <%= link_to student_path(student), title: "Voir" do %>
                        <i class="bi bi-eye"></i>
                        <% end %>
                    </td>
                    <td>
                        <%= link_to edit_student_path(student), title: "Editer" do %>
                        <i class="bi bi-pencil" style="color: green;"></i>
                        <% end %>
                    </td>
                    <td>
                        <%= link_to student_path(student), title: "Supprimer", method: "delete", data: {confirm: "Are you sure ?"} do %>
                        <i class="bi bi-trash" style="color: red;"></i>
                        <% end %>
                    </td>
                  </tr>
                  <% end %>
                </tbody>
            </table>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>